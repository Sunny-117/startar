{
  "name": "@commencer/pnpm-monorepo",
  "version": "0.0.3",
  "private": true,
  "packageManager": "pnpm@8.7.0",
  "description": "Monorepo of project-name",
  "license": "MIT",
  "scripts": {
    "build": "esno scripts/build.ts",
    "dev": "esno scripts/dev.ts",
    "deploy": "esno scripts/deploy.ts",
    "dev:all": "pnpm run --filter=\"./packages/*\" dev",
    "build:all": "pnpm run --filter=\"./packages/*\" build",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "test": "vitest",
    "publish": "pnpm build && changeset publish",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp && pnpm publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@sxzz/eslint-config": "^3.4.0",
    "@sxzz/prettier-config": "^1.0.4",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.17.12",
    "bumpp": "^9.3.0",
    "chalk": "^5.3.0",
    "eslint": "^8.48.0",
    "esno": "^4.7.0",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.1",
    "inquirer": "^9.2.12",
    "prettier": "^3.0.2",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2",
    "vitest": "^0.34.3"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "prettier": "@sxzz/prettier-config"
}